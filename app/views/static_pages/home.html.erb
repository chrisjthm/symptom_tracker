<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/post_form' %>
			</section>
		</aside>
		<div class="span8">
		  <h3>Symptoms Feed</h3>
		  <%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center hero-unit">
	  <h1>Welcome to the Symptom Tracker</h1>

	  <h2>
	    This is the home page for the
	    <a href="http://symcat.com/">Symcat</a>
	    symptom tracker application.
	  </h2>

	  <%= link_to "Sign up now!", '#', class: "btn btn-large btn-primary" %>
	</div>
<% end %>

